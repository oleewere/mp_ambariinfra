  <property>
    <name>infra-manager.jobs.solr_data_export.archive_service_logs.read_block_size</name>
    <value>1000</value>
    <description>Number of rows read from solr per query</description>
    <display-name>Read block size</display-name>
    <value-attributes>
      <type>int</type>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>infra-manager.jobs.solr_data_export.archive_service_logs.write_block_size</name>
    <value>1000</value>
    <description>Number of rows written to output per file</description>
    <display-name>Write block size</display-name>
    <value-attributes>
      <type>int</type>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>infra-manager.jobs.solr_data_export.archive_service_logs.destination</name>
    <value>LOCAL</value>
    <description>Storage of the archived files: LOCAL, HDFS, S3</description>
    <display-name>Destination</display-name>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>infra-manager.jobs.solr_data_export.archive_service_logs.local_destination_directory</name>
    <value>/tmp/ambariInfraManager</value>
    <description>If destination id set to LOCAL the path in the local file system where archived files are stored.</description>
    <display-name>Destination</display-name>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>infra-manager.jobs.solr_data_export.archive_service_logs.file_name_suffix_column</name>
    <value>logtime</value>
    <description>Value of the column in the first record written to the file is going to be the suffix of the file</description>
    <display-name>Filename suffix column</display-name>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>infra-manager.jobs.solr_data_export.archive_service_logs.file_name_suffix_date_format</name>
    <value>yyyy-MM-dd'T'HH-mm-ss.SSSX</value>
    <description>Format string of the filename suffix value if the filename suffix column is a datetime</description>
    <display-name>Filename suffix date format</display-name>
    <on-ambari-upgrade add="true"/>
  </property>
